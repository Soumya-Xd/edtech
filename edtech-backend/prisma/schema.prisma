generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  name      String
  email     String      @unique
  enrollments Enrollment[]
}

model Course {
  id          Int         @id @default(autoincrement())
  title       String
  description String
  level       String
  enrollments Enrollment[]
}

model Enrollment {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  course    Course   @relation(fields: [courseId], references: [id])
  userId    Int
  courseId  Int
  role      String
}
